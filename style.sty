\definecolor{jpRed}{HTML}{C3002F}     % rojo vermillion
\definecolor{jpInk}{HTML}{111111}     % negro tinta
\definecolor{jpGray}{HTML}{4A4A4A}    % gris neutro
\definecolor{jpGold}{HTML}{C89A3D}    % dorado suave
\definecolor{jpSoft}{HTML}{F5F1EB}    % fondo suave

% NEW: Colores psicodélicos inspirados en Hausu
\definecolor{hausuBlue}{HTML}{00A0B0}   % Un azul "pop"
\definecolor{hausuGreen}{HTML}{6A994E}  % Un verde "fantasma"

% Colores para hipervínculos
\colorlet{linkblue}{hausuBlue} % NEW: Usando el azul nuevo
\colorlet{urlblue}{jpGold}
\colorlet{citeblue}{jpGray}

